<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <View
            android:id="@+id/view_result"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#7f7f7f"/>


    <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

        <TextView
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color Name : "
                android:textSize="17sp"
                android:textColor="@color/grey_1000"/>

        <TextView
                android:id="@+id/lbl_color"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="White"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/grey_1000"/>

        <TextView
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color brightness : [0 - 100]"
                android:textSize="17sp"
                android:textColor="@color/grey_1000"/>

        <TextView
                android:id="@+id/lbl_lum"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="569"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/grey_1000"/>

        <!--<TextView-->
                <!--android:layout_marginTop="@dimen/spacing_large"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Color Degree : "-->
                <!--android:textSize="17sp"-->
                <!--android:textColor="@color/grey_1000"/>-->

        <!--<TextView-->
                <!--android:id="@+id/lbl_degree"-->
                <!--android:layout_marginTop="@dimen/spacing_medium"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="White"-->
                <!--android:gravity="center"-->
                <!--android:textSize="25sp"-->
                <!--android:textColor="@color/grey_1000"/>-->

    </LinearLayout>


    <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/spacing_xmlarge"
                    android:text="R"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

            <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_red"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="15"
                    android:progress="7"/>

            <TextView
                    android:id="@+id/tv_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/spacing_xmlarge"
                    android:text="7"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/spacing_xmlarge"
                    android:text="G"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

            <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_green"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="15"
                    android:progress="7"/>

            <TextView
                    android:id="@+id/tv_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/spacing_xmlarge"
                    android:text="7"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/spacing_xmlarge"
                    android:text="B"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

            <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="15"
                    android:progress="7"/>

            <TextView
                    android:id="@+id/tv_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/spacing_xmlarge"
                    android:text="7"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>